<div class="column is-half is-offset-one-quarter">

  <h2 class="title">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, :html => {:class => "box"}, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= image_tag user_avatar(resource, 150) %>
    <div class="file has-name">
      <label class="file-label">
        <%= f.file_field :avatar, :class => "file-input" %>
        <span class="file-cta">
          <span class="file-icon">
            <i class="fas fa-upload"></i>
          </span>
          <span class="file-label">
            Choose a fileâ€¦
          </span>
        </span>
      </label>
    </div>
    <div class="field">
      <%= f.label :name, :class => "label" %>
      <%= f.text_field :name, :class =>"input" %>
    </div>

    <div class="field">
      <%= f.label :country, :class => "label" %>
      <%= f.text_field :country, :class =>"input" %>
    </div>

    <div class="field">
      <%= f.label :age, :class => "label" %>
      <%= f.number_field :age, min: 13, max: 118, :class =>"input"  %>
    </div>  

    <div class="field">
      <%= f.label :email, :class => "label" %>
      <%= f.email_field :email, :class =>"input" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, :class => "label" %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, :class =>"input" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, :class => "label" %>
      <%= f.password_field :password_confirmation, :class =>"input" %>
    </div>

    <div class="field">
      <strong><%= f.label :current_password %></strong> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, :class =>"input" %>
    </div>

    <div class="actions">
      <%= f.submit "Update", :class => "button is-primary is-large" %>
    </div>
  <% end %>

  <h3 class="title is-5">Cancel my account</h3>

  <p class="subtitle is-5">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "button is-danger is-small" %></p>

  <%= link_to "Back", :back %>
</div>